<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="item_count" format="integer" />
    <attr name="text_color_normal" format="color" />
    <attr name="text_color_hightlight" format="color" />
    <attr name="text_size" format="dimension" />
    <attr name="indicator_color" format="color" />
    <attr name="indicator_src" format="reference" />
    <attr name="indicator_style">
        <enum name="bitmap" value="0" />
        <enum name="line" value="1" />
        <enum name="square" value="2" />
        <enum name="triangle" value="3" />
    </attr>

    <!-- RVPIndicator -->
    <declare-styleable name="RVPIndicator">
        <attr name="item_count" />
        <attr name="text_color_normal" />
        <attr name="text_color_hightlight" />
        <attr name="text_size" />
        <attr name="indicator_color" />
        <attr name="indicator_src" />
        <attr name="indicator_style" />
    </declare-styleable>

    <!--模板dialog自定义view属性-->
    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>

</resources>